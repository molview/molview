modules = ["nodejs-20", "php-8.2", "web", "bash", "php-8.3"]
[agent]
expertMode = true
integrations = ["javascript_database==1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["sqlite", "openssh_gssapi"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MolView Server"

[[workflows.workflow]]
name = "MolView Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -c php.ini -S 0.0.0.0:5000"
waitForPort = 5000

[[workflows.workflow]]
name = "MolView Server Fixed"
author = 47171270
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:8080"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[deployment]
deploymentTarget = "autoscale"
run = ["php", "-S", "0.0.0.0:5000"]
build = ["grunt"]
